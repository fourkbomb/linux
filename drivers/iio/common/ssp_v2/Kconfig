#
# SSP sensor drivers and commons configuration
#
menu "Samsung SSP Sensorhub"

config IIO_SSP_V2
    tristate
	select IIO_BUFFER
	select IIO_KFIFO_BUF

config IIO_SSP_V2_I2C
    tristate "SSP connected via I2C"
    depends on I2C
    select IIO_SSP_V2
    help
      Say Y to build support for I2C connected SSP.
      If unsure, say N.
endmenu
